" Configure Pathogen
call pathogen#infect()
call pathogen#helptags()

" Syntax HL and indentation
syntax on
filetype plugin indent on
set expandtab
set ts=4
set sw=4

" Configure NERDTree
let NERDTreeIgnore = ['\.pyc$']
nmap <F7> :NERDTreeToggle<CR>

" Text colours and encoding
set t_Co=256
set encoding=utf-8

" Configure Tagbar
nmap <F8> :TagbarToggle<CR>

" Extra settings
set wildmenu
set number
set hlsearch
set incsearch
