# install git vim screen exuberant-ctags terminator python2.7
# Ubuntu & Debian:
sudo apt-get install git vim screen exuberant-ctags terminator python

# To configure setup, do the following:
cd 
git clone git://github.com/nicr9/dotfiles.git
ln -s dotfiles/dotvimrc .vimrc
ln -s dotfiles/dotvim/ .vim
cd ~/dotfiles
git submodule init
git submodule update
pip install https://github.com/Lokaltog/powerline/tarball/develop
cp monofur.otf /usr/share/fonts/truetype/
